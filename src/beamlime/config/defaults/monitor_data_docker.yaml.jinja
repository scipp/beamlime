service:
  poll_interval: 0.1
consumer:
  topics:
    - beam_monitor
  kafka:
    bootstrap.servers: {{ KAFKA_BROKER }}
    auto.offset.reset: latest
    enable.auto.commit: true
    fetch.min.bytes: 1
    session.timeout.ms: 6000
    heartbeat.interval.ms: 2000
control:
  topic: beamlime_monitor_data_control
  kafka:
    bootstrap.servers: {{ KAFKA_BROKER_BEAMLIME }}
    auto.offset.reset: earliest
    enable.auto.commit: true
    fetch.min.bytes: 1
    session.timeout.ms: 6000
    heartbeat.interval.ms: 2000
producer:
  kafka:
    bootstrap.servers: {{ KAFKA_BROKER_BEAMLIME }}