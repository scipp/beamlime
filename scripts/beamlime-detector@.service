[Unit]
Description=Beamlime Detector Data Service (%i)
After=network.target

[Service]
Type=simple
User=essdaq
Group=essdaq
WorkingDirectory=/home/essdaq/essproj/beamlime
ExecStart=/bin/bash /home/essdaq/essproj/beamlime-services/beamlime-detector.sh %i
StandardOutput=append:/var/log/beamlime-detector-%i.log
StandardError=append:/var/log/beamlime-detector-%i.log
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
